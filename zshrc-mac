#FZF
FZF_DEFAULT_COMMAND='fd --type f --hidden --exclude .git --color '
alias fzt="fzf-tmux"
FZF_COMPLETION_TRIGGER="@"

alias -s go="go run"
alias -s py="python3"

fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line
  else
    zle push-input
    zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

source ~/.aliases

source $HOME/.cargo/env

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

FZF_DEFAULT_COMMAND='fd --type f --hidden --exclude .git --color '

